<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BulletinActivity"
    >

    <TextView
        android:id="@+id/t_titulo"
        android:text="@string/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18pt"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"

            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_user"
                android:id="@+id/cad_user"
                android:onClick="goForCadastro"
                />
            <ImageButton
                android:id="@+id/go_agenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/boletim"
                android:layout_alignBottom="@+id/cad_user"
                android:layout_toRightOf="@+id/cad_user"
                android:layout_toEndOf="@+id/cad_user"
                android:onClick="goForAgenda"
                />
            <ImageButton
                android:id="@+id/go_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/go_agenda"
                android:src="@drawable/horario"
                android:onClick="goForHorario"
                />
            <TextView
                android:id="@+id/txt_cad_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cad_user"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/txt_cad_titulo"/>
            <TextView
                android:id="@+id/txt_go_agenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/go_agenda"
                android:layout_toRightOf="@+id/txt_cad_user"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/txt_agenda"/>
            <TextView
                android:id="@+id/txt_go_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/go_agenda"
                android:layout_toRightOf="@+id/txt_go_agenda"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/txt_horario"/>
            <ImageButton
                android:id="@+id/go_boletim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_cad_user"
                android:src="@drawable/boletins"
                android:onClick="goForBoletim"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:layout_below="@+id/txt_go_agenda"
                android:layout_toRightOf="@+id/go_boletim"
                android:id="@+id/go_profile"
                android:onClick="goForProfile"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/materias"
                android:layout_below="@+id/txt_go_horario"
                android:layout_toRightOf="@+id/go_profile"
                android:id="@+id/go_materia"
                android:onClick="goForMaterias"
                />
            <TextView
                android:id="@+id/txt_go_boletim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/go_boletim"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/txt_boletim"
                />
            <TextView
                android:id="@+id/txt_go_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/go_profile"
                android:layout_toRightOf="@+id/txt_go_boletim"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/txt_profile"/>

            <TextView
                android:id="@+id/txt_go_materias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_go_profile"
                android:layout_below="@+id/go_materia"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@android:dimen/app_icon_size"
                android:text="@string/txt_materias"
                />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
